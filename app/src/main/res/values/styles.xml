        <item name="android:textSize">18sp</item>
        <item name="android:textColor">@color/colorBlack</item>
        <item name="android:paddingStart">20dp</item>
    </style>

    <style name="subtitleAds">
        <item name="android:textSize">14sp</item>
        <item name="android:paddingStart">20dp</item>
    </style>-->
    <style name="buttonStyle" parent="AppTheme">
        <item name="android:colorControlHighlight">@color/colorPrimary</item>
        <item name="android:background">@drawable/mapbutton_background</item>
        <item name="android:tint">@color/colorWhite</item>
        <item name="android:elevation">2dp</item>

    </style>


    <style name="PreferenceListHeader">

        <item name="android:textColor">@color/colorPrimaryDark</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:textSize">14sp</item>
        <item name="android:paddingTop">6dp</item>
        <item name="android:paddingBottom">6dp</item>
        <item name="android:paddingStart">12dp</item>
        <item name="android:paddingEnd">12dp</item>
        <item name="fontPath">font/OrkneyBold.otf</item>
    </style>

    <style name="ThemeOverlay.AppCompat.navTheme">
        <item name="colorPrimary">@color/colorAccentDark</item>
    </style>

    <style name="SplashTheme" parent="Theme.AppCompat.NoActionBar">
        <item name="android:windowBackground">@drawable/background_splash</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />


</resources>
