<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="80dp"
    android:paddingStart="16dp"
    android:paddingEnd="16dp"
    android:paddingTop="8dp"
    android:paddingBottom="8dp"
    tools:ignore="MissingPrefix"
    >

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/chatRoomImage"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_centerVertical="true"
        android:layout_alignParentStart="true"
        android:src="@mipmap/mycurtinicon"
        />

    <LinearLayout
        android:layout_toEndOf="@id/chatRoomImage"
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:layout_height="match_parent"
        android:paddingStart="12dp"
        android:weightSum="2"
        >
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:maxLines="1"
            android:ellipsize="end"
            android:textSize="16sp"
            android:gravity="center"
            android:text="FamilyMIAB"
            android:textColor="@color/colorBlack"
            fontPath="font/OrkneyBold.otf"
             />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:gravity="center"
            android:ellipsize="end"
            android:maxLines="1"
            android:text="sjkfdksbdksfnldnflsdkfnlmflsdkmfdlsfmdlsfmsdfldsmfdssd"
            />

    </LinearLayout>

</RelativeLayout>